@import url("https://fonts.googleapis.com/css?family=Montserrat|Roboto");
body {
  padding-left: 85px;
  width: calc(100%-85px);
  font-family: "Roboto", sans-serif;
  font-weight: thin;
  font-size: 12px;
}

header {
  position: fixed;
  left: 0;
  top: 0;
  width: 85px;
  height: 100%;
  padding: 0;
  text-align: center;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
}

h1, h2, h3, h4, h5, h6 {
  font-family: "Montserrat", sans-serif;
  font-weight: bold;
  color: #e96132;
}

a {
  color: white;
}
a:hover {
  color: white;
}

.ui.header {
  color: #e96132;
}

.ui.inverted.menu {
  background-size: contain;
  background: url(./../assets/bg.png);
}

.ui.segment.pushable {
  border: 0;
  border-radius: 0;
}

main {
  display: flex;
  align-content: center;
  vertical-align: middle;
  align-items: center;
  height: 100vh;
}
main::after {
  content: "";
  background-size: contain;
  background: url(./../assets/test-bg.png);
  opacity: 0.7;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  position: absolute;
  z-index: -1;
}

.centered {
  margin: 0 auto;
}

section.intro {
  max-width: 600px;
}
section.intro h1 {
  margin-bottom: 10px;
}
section.intro ul {
  list-style: none;
  margin: 0;
  padding: 0;
  margin-bottom: 25px;
}
section.intro ul li {
  padding-bottom: 5px;
}

section.test .question {
  display: flex;
  flex-direction: column;
  align-items: center;
}
section.test .question-text {
  font-size: 1.5rem;
  margin-bottom: 1rem;
}
section.test .answers {
  margin-bottom: 1.5rem;
}
section.test .answers .answer {
  text-align: left;
  margin-bottom: 0.5rem;
}

